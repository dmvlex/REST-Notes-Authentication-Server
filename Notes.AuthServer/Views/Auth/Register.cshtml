@model RegisterViewModel
<head>
    <link href=@Url.Content("~/styles/app.css") rel="stylesheet" type="text/css" />
</head>
<body>
    <form asp-controller="Auth" asp-action="Register" method="post">
        <input type="hidden" asp-for="ReturnUrl" />

        <div class="header">Registration</div>
        <div class="block">
            <label>Username</label>
            <input type="text" asp-for="Username" class="input" />
            <span asp-validation-for="Username"></span>
        </div>
        <div class="block">
            <label>Password</label>
            <input type="password" asp-for="Password" class="input" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="block">
            <label>Confirm password</label>
            <input type="password" asp-for="ConfirmPassword" class="input"/>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="block">
            <button class="button" type="submit">Sign Up</button>
        </div>
        <a asp-controller="Auth" asp-action="Login" 
            asp-route-returnUrl="@Model.ReturnUrl">GO TO LOGIN</a>
    </form>
</body>
